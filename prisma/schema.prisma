generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Quiz {
  id        String   @id @default(cuid())
  title     String
  content   Json?
  live      Boolean  @default(false)
  deletion  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model QuizResponse {
  id        String   @id @default(cuid())
  quizId    String
  content   Json?
  createdAt DateTime @default(now())

  @@index([quizId])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PaymentLead {
  id                    String    @id @default(cuid())

  // Two emails collected
  email1                String    // Before payment
  email2                String?   // After payment/skip

  // Quiz reference
  quizId                String?
  quizResponseId        String?

  // Plan selection
  planType              String?   // "1_month" | "3_month" | "1_year" | null (if skipped)
  amountInCents         Int?

  // Payment status
  paid                  Boolean   @default(false)
  stripeSessionId       String?   @unique
  stripePaymentIntentId String?

  // Timestamps
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  paidAt                DateTime?

  @@index([email1])
  @@index([email2])
  @@index([quizId])
  @@index([paid])
}
